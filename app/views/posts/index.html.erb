<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
  <li>
    <h3><%= link_to post.title, "http://#{post.link}" %>-(<%= link_to post.link, "http://#{post.link}" %>)</h3>
    <p><%= link_to "Edit", edit_post_path(post) %> | <%= link_to "Delete", post_path(post), :data => {:confirm => "Are you sure?", :method => 'delete'} %></p>
  </li>
  <% end %>
</ul>
